<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetApp.TabItem">

    <Grid>
        <Label x:Name="label" HorizontalOptions="Center" VerticalOptions="Start" TextColor="{DynamicResource PrimaryBackgroundColour}"
               FontSize="13" Margin="15,0"/>
        <BoxView x:Name="boxView" VerticalOptions="End" IsVisible="False" HeightRequest="3" BackgroundColor="{DynamicResource DetailColour}"/>
        <BoxView/>
    </Grid>
</ContentView>